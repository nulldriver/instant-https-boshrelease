<% if p("bpm.enabled") %>
check process proxy
  with pidfile /var/vcap/sys/run/bpm/proxy/proxy.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start proxy"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop proxy"
  group vcap
<% else %>
check process proxy
  with pidfile /var/vcap/sys/run/proxy/proxy.pid
  start program "/var/vcap/jobs/proxy/bin/caddy_ctl start"
  stop program "/var/vcap/jobs/proxy/bin/caddy_ctl stop"
  group vcap
<% end %>
